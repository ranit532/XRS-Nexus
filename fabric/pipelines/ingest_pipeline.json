{
    "name": "Ingest_REST_to_Lakehouse",
    "properties": {
        "activities": [
            {
                "name": "Copy_REST_Data",
                "type": "Copy",
                "policy": {
                    "timeout": "0.12:00:00",
                    "retry": 3,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "typeProperties": {
                    "source": {
                        "type": "RestSource",
                        "httpRequestTimeout": "00:01:40",
                        "requestInterval": "00:00:10",
                        "requestMethod": "GET"
                    },
                    "sink": {
                        "type": "LakehouseTableSink",
                        "tableAction": "Append",
                        "partitionOption": "None"
                    },
                    "enableStaging": false
                },
                "inputs": [
                    {
                        "referenceName": "SourceRestDataset",
                        "type": "DatasetReference"
                    }
                ],
                "outputs": [
                    {
                        "referenceName": "SinkLakehouseTable",
                        "type": "DatasetReference"
                    }
                ]
            }
        ],
        "parameters": {
            "SourceUrl": {
                "type": "String",
                "defaultValue": "https://api.example.com/data"
            },
            "DestinationTable": {
                "type": "String",
                "defaultValue": "landing_raw"
            }
        },
        "annotations": []
    }
}
